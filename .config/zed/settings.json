// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent": {
    "model_parameters": [],
    "always_allow_tool_actions": false,
    "version": "2"
  },
  "confirm_quit": true,
  "format_on_save": "on",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "buffer_font_family": "Annotation Mono",
  "buffer_font_weight": 400,
  "buffer_font_size": 15,
  "terminal": {
    "font_family": "Annotation Mono",
    "font_weight": 300,
    "font_size": 12
  },
  "vim_mode": true,
  "edit_predictions": {
    "mode": "eager"
  },
  "jupyter": {
    "enabled": false
  },
  "language_overrides": {
    "Markdown": {
      "preferred_line_length": 92
    }
  },
  "tabs": {
    "git_status": true
  },
  "file_scan_exclusions": [
    "**/.jj",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "file_types": {
    // set all .json files to be seen as JSONC
    "JSONC": ["*.json"]
  }
}
