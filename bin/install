#!/bin/bash
[ -x "$(command -v apt-get)" ] || (sudo apt-get install build-essential)
[ -x "$(command -v brew)" ] || (curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh | bash)
[ -x "$(command -v brew)" ] && (brew install direnv starship asdf helix)
[ -x "$(command -v brew)" ] && (brew upgrade)
